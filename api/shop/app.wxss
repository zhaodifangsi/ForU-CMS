/**app.wxss**/
@import "utils/wxParse/wxParse.wxss";
@import "weui/weui.wxss";
.main{
    padding: 3%;
    word-break: break-all;
    font-size:14px;
}
.ttl{
    margin:3% 3% 0;
    /*background-image: linear-gradient(to top, #EEEEEE, #7093c0);*/
    background-color: #0168c0;
    color: #FFF;
    padding: 2%;
    border:1px solid #FFF;
    border-radius: 5px;
    box-shadow:0 0 5px #DDD;
    text-align: center;
    font-size: 14px;
    font-weight: bold;
}
.container{
    padding:3%;
    background-color: #FFF;
    border-radius: 5px;
    box-shadow:0 0 5px #EEE;
    font-size: 14px;
    line-height: 1.6em;
}
.center{
    text-align: center;
}
.fl{
    float:left;
}
.fr{
    float:right;
}
.pos-rel{
    position:relative;
}
.split{
    display: block;
    height: 10px;
    clear: both;
}
.split-gray{
    display: block;
    height: 10px;
    background-color: #EEEEEE;
    clear: both;
}
.wxParse-img{
    display:block;
    max-width:100%;
}
.wxParse-tr{
    margin-top:-1px;
}
.wxParse-tr:first-of-type{
    margin-top:0px;
}
.wxParse-th{
    border-top:none;
}
.wxParse-p{
    margin-bottom:1em;
    line-height:1.6em
}

swiper#banner{height:38vw;}
#banner image{width:100vw;height:38vw;}

#list-prod{}
#list-prod .li{margin:1%; width:98%; float:left;}
#list-prod .img{width:32vw;height:32vw;max-width:180px;max-height:180px;border:1px solid #EEEEEE;margin-right:4%;float:left;}
#list-prod .title{line-height: 1.6rem; height: 1.6rem; overflow: hidden; text-overflow:ellipsis; white-space:nowrap; font-size:0.875rem;font-weight:400;}
#list-prod .desc{ color:#999999; overflow: hidden; white-space:nowrap; font-size:0.725rem;}
#list-prod .color{padding-left:5px;}
#list-prod .color view{display:inline-block;margin-left:-5px;width:10px;height:10px;border:1px solid #FFFFFF;border-radius:10px;background-color:#EEEEEE;font-size:0.6rem;}
#list-prod .color view.desc{display:inline-block;color:#CCCCCC;margin-left:5px;width:auto;height:auto;border:none;border-radius:0;background-color:transparent;}
#list-prod .price{font-size:0.7rem;}
#list-prod .cprice{color:#cc9966;display:inline;}
#list-prod .cprice view{display:inline;}
#list-prod .cprice view.number{font-size:1.1rem;display:inline;padding-right:5%;}
#list-prod .oprice{color:#CCCCCC;line-height:1.1rem;font-size:0.6rem;display:inline;}
#list-prod .btn-buy{color:#FFFFFF;background-color:#cc9966;font-size:0.725rem;border-radius:0;line-height:1.8;letter-spacing:0.1rem;}

#list-text{}
#list-text .li{ background:url(http://beta.foru.net.cn/mcmswx/minip/images/share/bg_li_text.png) no-repeat 97% center #FFF; border:1px solid #EEE; padding: 3% 6% 3% 3%; margin-bottom: 1em; border-radius: 5px; box-shadow:0 0 5px #EEE; position: relative; }
#list-text .title{ font-size:12px; line-height: 1.5em; position: relative; }
